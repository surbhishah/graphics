import java.awt.Graphics;
import java.awt.Color;
public class Point {
	int x;
	int y;
	public Point(){}
	public Point(int x, int y){
		this.x = x;
		this.y = y;
	}
	public void drawPoint(Graphics g, Color color){
		g.setColor(color);
		g.drawLine(x, y, x, y);
	}
	
	public int getQuadrant(Point center ){
		
		return 6;
	}
	public Point translate(Point center){ // translate the point to the axes of the system
											// from axes of center 
		return new Point(center.x + this.x,center.y - this.y);	
	}
	public Point translateAxesFromStandard(Point center){// translate the point from axes of system to 
														// axes of center
		return new Point(this.x -center.x ,  center.y- this.y);

	}
	public void translateAndDrawPoint(Graphics g, Point center, Color color){
		Point translatedPoint = this.translate(center);
		translatedPoint.drawPoint(g,color);
	}
	
	public Point reflectAboutXAxis(){
		return new Point(this.x, -this.y);
	}
	
	public void reflectAboutXAxisAndDraw(Graphics g, Color color){
		Point reflectedPoint = reflectAboutXAxis();
		reflectedPoint.drawPoint(g,color);
	}
	
	public Point reflectAboutYAxis(){
		return new Point(-this.x, this.y);
		
	}
	
	public void reflectAboutYAxisAndDraw(Graphics g, Color color){
		Point reflectedPoint = reflectAboutYAxis();
		reflectedPoint.drawPoint(g,color);
	}
}

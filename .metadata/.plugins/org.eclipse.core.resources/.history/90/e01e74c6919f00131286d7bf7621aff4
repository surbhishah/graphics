		int matrix[][] = { { 1, 0, 0 }, { 0, 1, 0 }, { tx, ty, 1 } };
		Matrix translationMatrix = new Matrix(matrix);
		Matrix resultMatrix = points.multiply(translationMatrix);
		return resultMatrix;
	}

}
